{
  "compilerOptions": {
    "target": "ESNext",                          // Target modern ECMAScript version for optimal support
    "module": "ESNext",                          // Utilize ES Module syntax for React and modern bundlers
    "moduleResolution": "node",                 // Resolve modules in a Node.js-like manner
    "strict": true,                              // Enable all strict type-checking options
    "jsx": "react-jsx",                          // Use React's JSX runtime (React 17+)
    "allowJs": true,                             // Allows JavaScript files to coexist in the project
    "esModuleInterop": true,                     // Ensure compatibility with CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,    // Disallows inconsistently-cased references to files
    "skipLibCheck": true,                        // Skips type checking of library (node_modules) files
    "resolveJsonModule": true,                   // Allows importing JSON files as modules
    "noImplicitAny": true,                       // Raise error on expressions and declarations with an implied 'any' type
    "noImplicitThis": true,                      // Raise error on `this` expressions with an implied `any` type
    "noUnusedParameters": true,                  // Warn on function parameters that are never used
    "noUnusedLocals": true,                      // Warn on local variables that are never used
    "baseUrl": "./",                             // Base directory for non-relative module names
    "paths": {
      "@components/*": ["src/components/*"],     // Aliases for easier imports
      "@utils/*": ["src/utils/*"]                // Example alias for utilities
    },
    "outDir": "./dist",                          // Directory where compiled files are outputted
    "sourceMap": true,                           // Generate `.map` files for debugging
    "lib": ["dom", "dom.iterable", "esnext"],    // Add DOM APIs and modern ECMAScript libraries
    "types": ["node", "jest"],                   // Include type definitions for Node.js and Jest
    "allowSyntheticDefaultImports": true,       // Allow default imports even if they donâ€™t exist in the JavaScript module
    "isolatedModules": true,                     // Require each file to be treated as a module
    "strictNullChecks": true,                    // Ensure all null and undefined values are handled
    "useDefineForClassFields": true             // Use the `define` JavaScript class field behavior
  },
  "include": [
    "src/**/*.ts",                               // Include all TypeScript files in the src directory
    "src/**/*.tsx"                               // Include all TypeScript JSX files
  ],
  "exclude": [
    "node_modules",                              // Exclude files in the node_modules directory
    "dist",                                      // Exclude compiled build files
    "**/*.test.ts",                              // Exclude TypeScript unit test files
    "**/*.test.tsx",                             // Exclude TypeScript JSX unit test files
    "jest.config.ts"                             // Exclude Jest configuration type file, if any
  ]
}